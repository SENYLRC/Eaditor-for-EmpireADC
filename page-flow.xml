<config xmlns="http://www.orbeon.com/oxf/controller" xmlns:oxf="http://www.orbeon.com/oxf/processors">

	<!-- ****************
	* ADMIN INTERFACE *
	***************** -->
	<page path-info="/eaditor/admin/edit/core-template/" view="xforms/ead-template.xhtml"/>
	<page path-info="/eaditor/admin/edit/c-template/" view="xforms/c-template.xhtml"/>
	<page path-info="/eaditor/admin/edit/instance-templates/" view="xforms/instance-templates.xhtml"/>
	<page path-info="/eaditor/admin/edit/core/" view="xforms/ead.xhtml"/>
	<page path-info="/eaditor/admin/edit/component/" view="xforms/component.xhtml"/>
	<page path-info="/eaditor/admin/upload/" view="xforms/upload.xhtml"/>
	<page path-info="/eaditor/admin/vocab/" view="xforms/vocab.xhtml"/>
	<page path-info="/eaditor/admin/eac-cpf/" view="xforms/eac-cpf.xhtml"/>
	<page path-info="/eaditor/admin/templates/" view="xforms/templates.xhtml"/>
	<page path-info="/eaditor/admin/reorder/" view="xforms/reorder.xhtml"/>
	<page path-info="/eaditor/admin/permissions/" view="xforms/permissions.xhtml"/>
	<page path-info="/eaditor/admin/settings/" view="xforms/settings.xhtml"/>
	<page path-info="/eaditor/admin/" id="admin" view="xforms/admin.xhtml"/>

	<!-- test page -->
	<page path-info="/eaditor/admin/test/" view="xforms/test.xhtml"/>
	<!-- dsc navigation service for forms via ajax -->
	<page path-info="/eaditor/admin/navigation/(.*)" matcher="oxf:perl5-matcher" model="exist-url.xml" view="xforms/xpl/navigation.xpl"/>
	<page path-info="/eaditor/admin/toc/(.*)" matcher="oxf:perl5-matcher" model="exist-url.xml" view="xforms/xpl/toc.xpl"/>

	<!-- get attributes for given element from xsd -->
	<!--<page path-info="/eaditor/get_attributes/" model="xml/empty.xml" view="xforms/xpl/xsd-get-attributes.xpl"/>-->

	<!-- private xml (all elements shown) -->
	<page path-info="/eaditor/admin/xml/(.*)" matcher="oxf:perl5-matcher" view="xforms/xpl/xml-private.xpl"/>

	<!-- private html view -->
	<page path-info="/eaditor/admin/show/(.*)" matcher="oxf:perl5-matcher" model="xforms/xpl/xml-private.xpl" view="xforms/xpl/display.xpl"/>

	<!-- ****************
	* PUBLIC INTERFACE *
	***************** -->
	<!-- public xml view (internal elements supressed) -->
	<page path-info="/eaditor/xml/(.*)" matcher="oxf:perl5-matcher" view="xforms/xpl/xml-public.xpl"/>

	<!-- public html view -->
	<page path-info="/eaditor/show/(.*)" matcher="oxf:perl5-matcher" model="xforms/xpl/xml-public.xpl" view="xforms/xpl/display.xpl"/>

	<!-- solr doc service -->
	<page path-info="/eaditor/solr/(.*)" matcher="oxf:perl5-matcher" model="exist-url.xml" view="xforms/xpl/ead-publish.xpl"/>

	<!-- index -->
	<page path-info="/eaditor/" model="exist-url.xml" view="xforms/xpl/index.xpl"/>

	<!-- public search/browse interface -->
	<page path-info="/eaditor/results/" model="exist-url.xml" view="xforms/xpl/results.xpl"/>
	<page path-info="/eaditor/search/" model="exist-url.xml" view="xforms/xpl/search.xpl"/>
	<page path-info="/eaditor/maps/" model="exist-url.xml" view="xforms/xpl/maps.xpl"/>

	<!-- Atom feed -->
	<page path-info="/eaditor/feed/" model="exist-url.xml" view="xforms/xpl/feed.xpl"/>

	<!-- OAI-PMH feed -->
	<page path-info="/eaditor/oai/" model="exist-url.xml" view="xforms/xpl/oai-pmh.xpl"/>

	<!-- KML service -->
	<page path-info="/eaditor/query.kml" model="exist-url.xml" view="xforms/xpl/solr-to-kml.xpl"/>

	<!-- AJAX CALLS -->
	<!-- facet results -->
	<page path-info="/eaditor/get_facets/" model="exist-url.xml" view="xforms/xpl/get_facets.xpl"/>
	<!-- decades results for nested checkbox -->
	<page path-info="/eaditor/get_decades/" model="exist-url.xml" view="xforms/xpl/get_decades.xpl"/>
	<page path-info="/eaditor/results_ajax/" model="exist-url.xml" view="xforms/xpl/results_ajax.xpl"/>

	<epilogue url="oxf:/config/epilogue.xpl"/>
</config>
