<config xmlns="http://www.orbeon.com/oxf/controller" xmlns:oxf="http://www.orbeon.com/oxf/processors">

	<!-- ****************
	* ADMIN INTERFACE *
	***************** -->
	<page path-info="/eaditor/admin/edit/core-template/" view="xforms/ead-template.xhtml"/>
	<page path-info="/eaditor/admin/edit/c-template/" view="xforms/c-template.xhtml"/>
	<page path-info="/eaditor/admin/edit/instance-templates/" view="xforms/instance-templates.xhtml"/>
	<page path-info="/eaditor/admin/edit/core/" view="xforms/ead.xhtml"/>
	<page path-info="/eaditor/admin/edit/component/" view="xforms/component.xhtml"/>
	<page path-info="/eaditor/admin/upload/" view="xforms/upload.xhtml"/>
	<page path-info="/eaditor/admin/vocab/" view="xforms/vocab.xhtml"/>
	<page path-info="/eaditor/admin/eac-cpf/" view="xforms/eac-cpf.xhtml"/>
	<page path-info="/eaditor/admin/templates/" view="xforms/templates.xhtml"/>
	<page path-info="/eaditor/admin/reorder/" view="xforms/reorder.xhtml"/>
	<page path-info="/eaditor/admin/permissions/" view="xforms/permissions.xhtml"/>
	<page path-info="/eaditor/admin/settings/" view="xforms/settings.xhtml"/>
	<page path-info="/eaditor/admin/" id="admin" view="xforms/admin.xhtml"/>

	<!-- test page -->
	<page path-info="/eaditor/admin/test/" view="xforms/test.xhtml"/>
	<!-- dsc navigation service for forms via ajax -->
	<page path-info="/eaditor/admin/navigation/(.*)" matcher="oxf:perl5-matcher" model="xpl/xml-private.xpl" view="xpl/navigation.xpl"/>
	<page path-info="/eaditor/admin/toc/(.*)" matcher="oxf:perl5-matcher" model="xpl/xml-private.xpl" view="xpl/toc.xpl"/>

	<!-- get attributes for given element from xsd -->
	<page path-info="/eaditor/admin/get_attributes/" model="xml/empty.xml" view="xpl/xsd-get-attributes.xpl"/>

	<!-- private xml (all elements shown) -->
	<page path-info="/eaditor/admin/id/(.*)\.xml" matcher="oxf:perl5-matcher" view="xpl/xml-private.xpl"/>

	<!-- private html view -->
	<page path-info="/eaditor/admin/id/(.*)" matcher="oxf:perl5-matcher" model="xpl/xml-private.xpl" view="xpl/display.xpl"/>

	<!-- ****************
	* PUBLIC INTERFACE *
	***************** -->	
	<page path-info="/eaditor/config.xml" view="xpl/config.xpl"/>
	
	<!-- public xml view (internal elements supressed) -->
	<page path-info="/eaditor/id/(.*)\.xml" matcher="oxf:perl5-matcher" view="xpl/xml-public.xpl"/>
	
	<!-- RDF serialization -->
	<page path-info="/eaditor/id/(.*)\.rdf" matcher="oxf:perl5-matcher" model="xpl/xml-public.xpl" view="xpl/rdf.xpl"/>	
	
	<!-- solr doc service -->
	<page path-info="/eaditor/id/(.*)\.solr" matcher="oxf:perl5-matcher" model="xpl/xml-public.xpl" view="xpl/publish.xpl"/>

	<!-- public html view -->
	<page path-info="/eaditor/id/(.*)" matcher="oxf:perl5-matcher" model="xpl/xml-public.xpl" view="xpl/display.xpl"/>
	<page path-info="/eaditor/id/(.*)/(.*)" matcher="oxf:perl5-matcher" model="xpl/xml-public.xpl" view="xpl/display.xpl"/>

	<!-- index -->
	<page path-info="/eaditor/" model="xpl/config.xpl" view="xpl/index.xpl"/>

	<!-- public search/browse interface -->
	<page path-info="/eaditor/results/" model="xpl/solr-results.xpl" view="xpl/results.xpl"/>
	<page path-info="/eaditor/search/" model="xpl/config.xpl" view="xpl/search.xpl"/>
	<page path-info="/eaditor/maps/" model="xpl/solr-maps.xpl" view="xpl/maps.xpl"/>
	<page path-info="/eaditor/maps/fullscreen" model="xpl/solr-maps.xpl" view="xpl/maps-fullscreen.xpl"/>

	<!-- Atom feed -->
	<page path-info="/eaditor/feed/" model="xpl/solr-feed.xpl" view="xpl/feed.xpl"/>

	<!-- OAI-PMH feed -->
	<page path-info="/eaditor/oai/" model="xpl/solr-oai-pmh.xpl" view="xpl/oai-pmh.xpl"/>
	
	<!-- Pelagios -->
	<page path-info="/eaditor/pelagios.void.rdf" model="xpl/config.xpl" view="xpl/void.xpl"/>
	<page path-info="/eaditor/pelagios.rdf" model="xpl/solr-pelagios.xpl" view="xpl/pelagios.xpl"/>

	<!-- KML service -->
	<page path-info="/eaditor/query.kml" model="xpl/solr-kml.xpl" view="xpl/kml.xpl"/>

	<!-- AJAX CALLS -->
	<!-- facet results -->
	<page path-info="/eaditor/get_facets/" model="xpl/solr-get_facets.xpl" view="xpl/get_facets.xpl"/>
	<!-- decades results for nested checkbox -->
	<page path-info="/eaditor/get_decades/" model="xpl/solr-get_decades.xpl" view="xpl/get_decades.xpl"/>
	<page path-info="/eaditor/results_ajax/" model="xpl/solr-results_ajax.xpl" view="xpl/results_ajax.xpl"/>

	<epilogue url="oxf:/config/epilogue.xpl"/>
</config>
