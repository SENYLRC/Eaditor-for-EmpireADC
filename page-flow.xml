<config xmlns="http://www.orbeon.com/oxf/controller" xmlns:oxf="http://www.orbeon.com/oxf/processors">

	<!-- ****************
	* ADMIN INTERFACE *
	***************** -->
	<!-- editor forms -->
	<!-- EAD-related -->
	<page path="/eaditor/admin/edit/core-template/" view="xforms/ead-template.xhtml"/>
	<page path="/eaditor/admin/edit/c-template/" view="xforms/c-template.xhtml"/>
	<page path="/eaditor/admin/edit/instance-templates/" view="xforms/instance-templates.xhtml"/>
	<page path="/eaditor/admin/edit/core/" view="xforms/ead.xhtml"/>
	<page path="/eaditor/admin/edit/component/" view="xforms/component.xhtml"/>
	<!-- TEI -->
	<page path="/eaditor/admin/edit/tei/" view="xforms/tei.xhtml"/>
	
	<!-- admin functions -->
	<page path="/eaditor/admin/upload/" view="xforms/upload.xhtml"/>
	<page path="/eaditor/admin/vocab/" view="xforms/vocab.xhtml"/>
	<page path="/eaditor/admin/eac-cpf/" view="xforms/eac-cpf.xhtml"/>
	<page path="/eaditor/admin/templates/" view="xforms/templates.xhtml"/>
	<page path="/eaditor/admin/reorder/" view="xforms/reorder.xhtml"/>
	<page path="/eaditor/admin/permissions/" view="xforms/permissions.xhtml"/>
	<page path="/eaditor/admin/settings/" view="xforms/settings.xhtml"/>
	<page path="/eaditor/admin/control/" view="xforms/control.xhtml"/>
	<page path="/eaditor/admin/" id="admin" view="xforms/admin.xhtml"/>

	<!-- test page -->
	<page path="/eaditor/admin/test/" view="xforms/test.xhtml"/>
	
	<!-- an ajax call to display the toc in the admin page -->
	<page path="/eaditor/admin/navigation/" model="xpl/xml-private.xpl" view="xpl/navigation.xpl"/>
	
	<!-- generate toc in core or component form -->
	<page path="/eaditor/admin/toc/" model="xpl/xml-private.xpl" view="xpl/toc.xpl"/>
	
	<!-- get attributes for given element from xsd -->
	<page path="/eaditor/admin/get_attributes/" model="xml/empty.xml" view="xpl/xsd-get-attributes.xpl"/>

	<!-- private xml (all elements shown) -->
	<page path="/eaditor/admin/[^\/]+/id/(.*)\.xml" matcher="oxf:perl5-matcher" view="xpl/xml-private.xpl"/>

	<!-- private html view -->
	<page path="/eaditor/admin/[^\/]+/id/(.*)" matcher="oxf:perl5-matcher" model="xpl/xml-private.xpl" view="xpl/display.xpl"/>
	
	<!-- logout -->
	<page path="/eaditor/admin/logout">		
		<action action="xpl/logout.xpl">
			<result page="index"/>
		</action>
	</page>
	
	<!-- ****************
	* PUBLIC INTERFACE *
	***************** -->
	<page path="/eaditor/[^\/]+/config.xml" matcher="oxf:perl5-matcher" view="xpl/config.xpl"/>

	<!-- public xml view (internal elements supressed) -->
	<page path="/eaditor/[^\/]+/id/(.*)\.xml" matcher="oxf:perl5-matcher" view="xpl/xml-public.xpl"/>

	<!-- RDF serialization -->
	<page path="/eaditor/[^\/]+/id/(.*)\.rdf" matcher="oxf:perl5-matcher" model="xpl/xml-public.xpl" view="xpl/rdf.xpl"/>

	<!-- Object KML -->
	<page path="/eaditor/[^\/]+/id/(.*)\.kml" matcher="oxf:perl5-matcher" model="xpl/xml-public.xpl" view="xpl/object-to-kml.xpl"/>

	<!-- solr doc service -->
	<page path="/eaditor/[^\/]+/id/(.*)\.solr" matcher="oxf:perl5-matcher" model="xpl/xml-public.xpl" view="xpl/publish.xpl"/>

	<!-- public html view -->
	<page path="/eaditor/[^\/]+/id/(.*)" matcher="oxf:perl5-matcher" model="xpl/xml-public.xpl" view="xpl/display.xpl"/>
	
	<!-- ARK URIs -->
	<page path="/eaditor/[^\/]+/ark:/([0-9]{5})/(.*)\.xml" matcher="oxf:perl5-matcher" view="xpl/xml-public.xpl"/>
	<page path="/eaditor/[^\/]+/ark:/([0-9]{5})/(.*)\.kml" matcher="oxf:perl5-matcher" model="xpl/xml-public.xpl" view="xpl/object-to-kml.xpl"/>
	<page path="/eaditor/[^\/]+/ark:/([0-9]{5})/(.*)\.rdf" matcher="oxf:perl5-matcher" model="xpl/xml-public.xpl" view="xpl/rdf.xpl"/>
	<page path="/eaditor/[^\/]+/ark:/([0-9]{5})/(.*)\.solr" matcher="oxf:perl5-matcher" model="xpl/xml-public.xpl" view="xpl/publish.xpl"/>
	<page path="/eaditor/[^\/]+/ark:/([0-9]{5})/(.*)" matcher="oxf:perl5-matcher" model="xpl/xml-public.xpl" view="xpl/display.xpl"/>

	<!-- index -->	
	<page path="/eaditor/[^\/]+/" matcher="oxf:perl5-matcher" model="xpl/config.xpl" view="xpl/index.xpl"/>

	<!-- public search/browse interface -->
	<page path="/eaditor/[^\/]+/results/" matcher="oxf:perl5-matcher" model="xpl/solr-results.xpl" view="xpl/results.xpl"/>
	<page path="/eaditor/[^\/]+/search/" matcher="oxf:perl5-matcher" model="xpl/config.xpl" view="xpl/search.xpl"/>
	<page path="/eaditor/[^\/]+/maps/" matcher="oxf:perl5-matcher" model="xpl/solr-maps.xpl" view="xpl/maps.xpl"/>
	<page path="/eaditor/[^\/]+/maps/fullscreen" matcher="oxf:perl5-matcher" model="xpl/solr-maps.xpl" view="xpl/maps-fullscreen.xpl"/>

	<!-- Atom feed -->
	<page path="/eaditor/[^\/]+/feed/" matcher="oxf:perl5-matcher" model="xpl/solr-feed.xpl" view="xpl/feed.xpl"/>

	<!-- OAI-PMH feed -->
	<page path="/eaditor/[^\/]+/oai/" matcher="oxf:perl5-matcher" model="xpl/solr-oai-pmh.xpl" view="xpl/oai-pmh.xpl"/>

	<!-- Pelagios -->
	<page path="/eaditor/[^\/]+/pelagios.void.rdf" matcher="oxf:perl5-matcher" model="xpl/config.xpl" view="xpl/void.xpl"/>
	<page path="/eaditor/[^\/]+/pelagios.rdf" matcher="oxf:perl5-matcher" model="xpl/solr-pelagios.xpl" view="xpl/pelagios.xpl"/>

	<!-- KML service -->
	<page path="/eaditor/[^\/]+/query.kml" matcher="oxf:perl5-matcher" model="xpl/solr-kml.xpl" view="xpl/kml.xpl"/>

	<!-- AJAX CALLS -->
	<!-- facet results -->
	<page path="/eaditor/[^\/]+/get_facets/" matcher="oxf:perl5-matcher" model="xpl/solr-get_facets.xpl" view="xpl/get_facets.xpl"/>
	<!-- decades results for nested checkbox -->
	<page path="/eaditor/[^\/]+/get_decades/" matcher="oxf:perl5-matcher" model="xpl/solr-get_decades.xpl" view="xpl/get_decades.xpl"/>
	<page path="/eaditor/[^\/]+/results_ajax/" matcher="oxf:perl5-matcher" model="xpl/solr-results_ajax.xpl" view="xpl/results_ajax.xpl"/>
	<!-- generate Annotorious annotations from TEI, using doc and facsimile ids -->
	<page path="/eaditor/[^\/]+/get_annotations/" matcher="oxf:perl5-matcher" view="xpl/get_annotations.xpl"/>
	<!-- generate JSON output for labels of URIs from nomisma, Mantis, etc. to power links in annotations -->
	<page path="/eaditor/[^\/]+/get_label/" matcher="oxf:perl5-matcher" model="xpl/get_model.xpl" view="xpl/get_label.xpl"/>
	
	<!-- EADitor public interface root page -->
	<page path="/eaditor/" view="xpl/root.xpl" id="index"/>

	<epilogue url="oxf:/config/epilogue.xpl"/>
</config>
